@using MVCApp.Models.Contact
@model AddVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Add","Contact",FormMethod.Post))
        {
            <div>
                Enter Id: @Html.TextBoxFor((m)=>m.Id)
            </div>
            <div>
                Enter Number: @Html.TextBoxFor((m)=>m.ContactNo)
            </div>
            <div>
                Enter First Name: @Html.TextBoxFor((m) => m.FName)
            </div>
            <div>
                Enter Last Name: @Html.TextBoxFor((m) => m.LName)
            </div>
            <div>
                Enter Email: @Html.TextBoxFor((m) => m.Email)
            </div>
            <input type="submit" value="Add Contact" />
        }
    </div>
</body>
</html>
